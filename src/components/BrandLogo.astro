---
interface Props {
  variant?: "square" | "full";
  class?: string;
}

const { variant = "square", class: className = "" } = Astro.props;

const logoSrc = variant === "square" 
  ? "/images/logos/2026_Logo_V3_with_2006.svg?v=3" 
  : "/images/logos/2026_Logo_V3_with_2006.svg?v=3";
  
const altText = "Top Barks Dog Training - Established 2006";
---

<img 
  src={logoSrc} 
  alt={altText}
  width="160"
  height="40"
  class={className || "h-10 w-auto object-contain inline-block"}
  style="display: inline-block; min-width: 120px; min-height: 40px;"
/>
