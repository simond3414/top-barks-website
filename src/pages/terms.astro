---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const title = "Terms & Conditions | Cancellation Policy";
const description = "Terms and conditions for Top Barks Dog Training services including our 48-hour cancellation policy, refund policy, and booking terms.";
---

<MainLayout title={title} customDescription={description}>
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-center text-3xl font-bold text-forest-800 dark:text-forest-200 md:text-4xl">
        Terms & Conditions
      </h1>
      <p class="mt-4 text-center text-earth-600 dark:text-earth-400">
        By making a booking with Top Barks Dog Training, you agree to these terms and conditions.
      </p>

      <div class="mt-12 space-y-10">
        <!-- Introduction -->
        <div class="rounded-2xl border border-beige-200 bg-white p-6 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <h2 class="text-xl font-bold text-forest-700 dark:text-forest-300">Accepting Our Terms</h2>
          <p class="mt-3 text-earth-600 dark:text-earth-400">
            Accepting the terms and conditions listed on this page is a requirement of making a booking with Top Barks Dog Training. Please read these terms carefully before confirming your appointment.
          </p>
        </div>

        <!-- Cancellations -->
        <div class="rounded-2xl border border-beige-200 bg-white p-6 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
              <span class="text-lg font-bold text-forest-600 dark:text-forest-400">1</span>
            </div>
            <h2 class="text-xl font-bold text-forest-700 dark:text-forest-300">Cancellations and Changes</h2>
          </div>
          <div class="mt-4 space-y-3 text-earth-600 dark:text-earth-400">
            <p>
              Cancellations and requests for changes to pre-arranged appointments by the Client must be received <strong class="text-forest-600 dark:text-forest-400">no later than 48 hours</strong> before a scheduled appointment.
            </p>
            <p>
              This allows us sufficient time to offer your slot to other clients who may be waiting for appointments.
            </p>
          </div>
        </div>

        <!-- Refunds and Rescheduling -->
        <div class="rounded-2xl border border-beige-200 bg-white p-6 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
              <span class="text-lg font-bold text-forest-600 dark:text-forest-400">2</span>
            </div>
            <h2 class="text-xl font-bold text-forest-700 dark:text-forest-300">Refunds and Rescheduling</h2>
          </div>
          <div class="mt-4 space-y-3 text-earth-600 dark:text-earth-400">
            <p>
              If a cancellation is made by the Client <strong class="text-forest-600 dark:text-forest-400">less than 48 hours</strong> before the lesson, <strong class="text-forest-600 dark:text-forest-400">no refund will be given</strong> for that lesson and it cannot be rescheduled.
            </p>
            <p>
              Please note that all blocks of lessons must be taken within <strong class="text-forest-600 dark:text-forest-400">4 months</strong> of the first lesson. Refunds will not be given for non-completion of blocks of lessons on the part of the client.
            </p>
          </div>
        </div>

        <!-- Deposits -->
        <div class="rounded-2xl border border-beige-200 bg-white p-6 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
              <span class="text-lg font-bold text-forest-600 dark:text-forest-400">3</span>
            </div>
            <h2 class="text-xl font-bold text-forest-700 dark:text-forest-300">Deposits</h2>
          </div>
          <div class="mt-4 text-earth-600 dark:text-earth-400">
            <p>
              Any deposit paid is <strong class="text-forest-600 dark:text-forest-400">non-refundable</strong> in the event of a cancellation prior to the commencement of a lesson.
            </p>
          </div>
        </div>

        <!-- Unforeseen Circumstances -->
        <div class="rounded-2xl border border-beige-200 bg-white p-6 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
              <span class="text-lg font-bold text-forest-600 dark:text-forest-400">4</span>
            </div>
            <h2 class="text-xl font-bold text-forest-700 dark:text-forest-300">Unforeseen Circumstances</h2>
          </div>
          <div class="mt-4 space-y-3 text-earth-600 dark:text-earth-400">
            <p>
              If your dog is ill, has been issued with a treatment by a veterinary practitioner, comes into season, or suffers an injury before the appointment, please <strong class="text-forest-600 dark:text-forest-400">contact us immediately</strong>.
            </p>
            <p>
              We understand that these situations are beyond your control and will work with you to reschedule your appointment where possible, subject to availability.
            </p>
          </div>
        </div>

        <!-- Contact CTA -->
        <div class="rounded-2xl bg-forest-600 p-6 text-center text-white">
          <h3 class="text-xl font-bold">Questions About Our Terms?</h3>
          <p class="mt-2">
            If you have any questions about these terms and conditions, please don't hesitate to contact us.
          </p>
          <div class="mt-4 flex justify-center gap-4">
            <a href="/contact" class="inline-flex items-center gap-2 rounded-lg bg-white px-4 py-2 text-sm font-semibold text-forest-600 transition hover:bg-beige-50">
              Contact Us
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"/>
                <path d="m12 5 7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center text-sm text-earth-500 dark:text-earth-400">
        <p>Last updated: February 2026</p>
      </div>
    </div>
  </section>
</MainLayout>