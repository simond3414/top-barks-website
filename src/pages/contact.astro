---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import contactImg from "@images/contact.JPG";
import { SITE } from "@data/constants";

const pageTitle = `Contact | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <!-- Hero Section - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-14 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-forest-800 dark:text-forest-200 sm:text-5xl">
        Contact Us
      </h1>
      <p class="mt-4 text-xl text-earth-700 dark:text-earth-300">
        Get in touch to discuss your dog training needs
      </p>
    </div>
  </section>

  <!-- Contact Section - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Contact Form - TODO: Replace form inputs with shadcn/ui components -->
      <div class="rounded-2xl border border-beige-200 bg-white p-8 shadow-sm dark:border-earth-700 dark:bg-earth-900">
        <h2 class="text-2xl font-bold text-forest-800 dark:text-forest-200">Send a Message</h2>
        <p class="mt-2 text-earth-600 dark:text-earth-400">Fill in the form below and we'll get back to you within 24 hours.</p>
        
        <form id="contact-form" class="mt-6 space-y-4">
          <div class="grid gap-4 sm:grid-cols-2">
            <div>
              <label for="name" class="block text-sm font-medium text-earth-700 dark:text-earth-300">Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="mt-1 block w-full rounded-lg border border-beige-300 bg-white px-4 py-2 text-earth-900 focus:border-forest-500 focus:outline-none dark:border-earth-600 dark:bg-earth-800 dark:text-white"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-earth-700 dark:text-earth-300">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="mt-1 block w-full rounded-lg border border-beige-300 bg-white px-4 py-2 text-earth-900 focus:border-forest-500 focus:outline-none dark:border-earth-600 dark:bg-earth-800 dark:text-white"
                placeholder="your@email.com"
              />
            </div>
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-earth-700 dark:text-earth-300">Phone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="mt-1 block w-full rounded-lg border border-beige-300 bg-white px-4 py-2 text-earth-900 focus:border-forest-500 focus:outline-none dark:border-earth-600 dark:bg-earth-800 dark:text-white"
              placeholder="Your phone number"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-earth-700 dark:text-earth-300">Service Interested In</label>
            <select 
              id="service" 
              name="service"
              class="mt-1 block w-full rounded-lg border border-beige-300 bg-white px-4 py-2 text-earth-900 focus:border-forest-500 focus:outline-none dark:border-earth-600 dark:bg-earth-800 dark:text-white"
            >
              <option value="">Select a service...</option>
              <option value="dog-training">Dog Training</option>
              <option value="puppy-training">Puppy Training</option>
              <option value="gundog-training">Gundog Training</option>
              <option value="training-walks">Training Walks</option>
              <option value="behaviour-problems">Behaviour Problems</option>
              <option value="show-training">Show Training</option>
              <option value="other">Other / Not Sure</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-earth-700 dark:text-earth-300">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              required
              class="mt-1 block w-full rounded-lg border border-beige-300 bg-white px-4 py-2 text-earth-900 focus:border-forest-500 focus:outline-none dark:border-earth-600 dark:bg-earth-800 dark:text-white"
              placeholder="Tell us about your dog and what you're looking for..."
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            id="submit-btn"
            class="w-full rounded-full bg-forest-600 px-8 py-3 text-base font-medium text-white transition hover:bg-forest-700 disabled:opacity-50 dark:bg-forest-500 dark:hover:bg-forest-600"
          >
            Send Message
          </button>
          
          <div id="form-message" class="mt-4 hidden text-center text-sm"></div>
        </form>
      </div>

      <!-- Contact Information - TODO: Replace with shadcn/ui Card component -->
      <div class="space-y-6">
        <div class="rounded-2xl border border-beige-200 bg-white p-8 shadow-sm dark:border-earth-700 dark:bg-earth-900">
          <h2 class="text-2xl font-bold text-forest-800 dark:text-forest-200">Contact Information</h2>
          
          <div class="mt-6 space-y-4">
            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
                <svg class="h-5 w-5 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-forest-700 dark:text-forest-300">Mark Sanderson</h3>
                <p class="text-sm text-earth-500">Professional Dog Trainer</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
                <svg class="h-5 w-5 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-forest-700 dark:text-forest-300">Email</h3>
                <a href="mailto:mark@topbarks.co.uk" class="text-earth-600 hover:text-forest-600 dark:text-earth-400 dark:hover:text-forest-400">mark@topbarks.co.uk</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
                <svg class="h-5 w-5 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-forest-700 dark:text-forest-300">Phone</h3>
                <p class="text-earth-600 dark:text-earth-400">01904 62 91 86</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
                <svg class="h-5 w-5 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-forest-700 dark:text-forest-300">Mobile</h3>
                <p class="text-earth-600 dark:text-earth-400">07932 63 28 55</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-forest-100 dark:bg-forest-900">
                <svg class="h-5 w-5 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-forest-700 dark:text-forest-300">Location</h3>
                <p class="text-earth-600 dark:text-earth-400">Huntington, York<br/>Near the A1036<br/>North Yorkshire, UK</p>
                <p class="mt-1 text-sm text-earth-500">Most sessions held at a location convenient for you</p>
              </div>
            </div>
          </div>
        </div>

        <Image src={contactImg} alt="Mark Sanderson with his dogs" class="rounded-2xl object-cover shadow-lg" />
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Handle contact form submission
  document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const formMessage = document.getElementById('form-message');
    const form = e.target as HTMLFormElement;
    
    // Disable submit button during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    
    try {
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        phone: formData.get('phone'),
        service: formData.get('service'),
        message: formData.get('message'),
      };
      
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (result.success) {
        formMessage!.textContent = result.message;
        formMessage!.className = 'mt-4 text-center text-sm text-green-600 dark:text-green-400';
        form.reset();
      } else {
        formMessage!.textContent = result.message || 'There was an error. Please try again.';
        formMessage!.className = 'mt-4 text-center text-sm text-red-600 dark:text-red-400';
      }
    } catch (error) {
      formMessage!.textContent = 'There was an error sending your message. Please try again later.';
      formMessage!.className = 'mt-4 text-center text-sm text-red-600 dark:text-red-400';
    } finally {
      formMessage!.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Send Message';
    }
  });
</script>
