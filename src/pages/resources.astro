---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const title = `Client Resources | ${SITE.title}`;
const description = "Download password-protected training resources and guides for your dog training journey with Top Barks.";
---

<MainLayout title={title} customDescription={description}>
  <section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8 lg:py-24">
    <!-- Header -->
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-forest-900 dark:text-forest-100 sm:text-5xl">
        Client Resources
      </h1>
      <p class="mt-4 text-lg text-earth-700 dark:text-earth-300">
        Password-protected training materials and guides to support your dog training journey.
      </p>
      <p class="mt-2 text-sm text-earth-600 dark:text-earth-400">
        <span class="inline-flex items-center gap-1">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          All PDFs are password protected. Use the password provided by your trainer.
        </span>
      </p>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="text-center py-12">
      <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-forest-600 border-t-transparent"></div>
      <p class="mt-4 text-earth-600 dark:text-earth-400">Loading resources...</p>
    </div>

    <!-- Error State -->
    <div id="error-state" class="hidden text-center py-12">
      <div class="rounded-lg bg-red-50 dark:bg-red-900/20 p-6 max-w-md mx-auto">
        <svg class="mx-auto h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-red-800 dark:text-red-200">Unable to load resources</h3>
        <p class="mt-2 text-sm text-red-700 dark:text-red-300" id="error-message">Please try again later or contact support.</p>
      </div>
    </div>

    <!-- Resources Grid -->
    <div id="resources-container" class="hidden">
      <!-- Categories will be inserted here -->
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden text-center py-12">
      <p class="text-earth-600 dark:text-earth-400">No resources available at this time.</p>
    </div>
  </section>

  <script>
    // Fetch and display resources
    async function loadResources() {
      const loadingEl = document.getElementById('loading-state');
      const errorEl = document.getElementById('error-state');
      const containerEl = document.getElementById('resources-container');
      const emptyEl = document.getElementById('empty-state');
      const errorMessageEl = document.getElementById('error-message');

      try {
        const response = await fetch('/api/resources');
        const data = await response.json();

        if (!data.success) {
          throw new Error(data.message || 'Failed to load resources');
        }

        if (!data.byCategory || Object.keys(data.byCategory).length === 0) {
          loadingEl?.classList.add('hidden');
          emptyEl?.classList.remove('hidden');
          return;
        }

        // Render resources by category
        let html = '';
        
        for (const [category, files] of Object.entries(data.byCategory)) {
          html += `
            <div class="mb-12">
              <h2 class="mb-6 text-2xl font-bold text-forest-800 dark:text-forest-200 border-b-2 border-forest-200 dark:border-forest-700 pb-2">
                ${escapeHtml(category)}
              </h2>
              <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          `;

          for (const file of files as Array<{displayName: string; filename: string; size?: string}>) {
            html += `
              <div class="rounded-lg border border-earth-200 dark:border-earth-700 bg-white dark:bg-earth-800 p-5 shadow-sm transition-shadow hover:shadow-md">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 rounded-lg bg-forest-100 dark:bg-forest-900/50 p-2">
                    <svg class="h-6 w-6 text-forest-600 dark:text-forest-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-base font-semibold text-forest-900 dark:text-forest-100 truncate">
                      ${escapeHtml(file.displayName)}
                    </h3>
                    <p class="mt-1 text-xs text-earth-500 dark:text-earth-400">
                      ${escapeHtml(file.size || 'Unknown size')}
                    </p>
                    <a 
                      href="/api/resources?file=${encodeURIComponent(file.filename)}"
                      target="_blank"
                      class="mt-3 inline-flex items-center gap-1.5 rounded-md bg-forest-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-forest-700 transition-colors"
                    >
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      </svg>
                      Download PDF
                    </a>
                  </div>
                </div>
              </div>
            `;
          }

          html += '</div></div>';
        }

        if (containerEl) {
          containerEl.innerHTML = html;
          containerEl.classList.remove('hidden');
        }
        loadingEl?.classList.add('hidden');

      } catch (error) {
        console.error('Error loading resources:', error);
        loadingEl?.classList.add('hidden');
        if (errorMessageEl) {
          errorMessageEl.textContent = error instanceof Error ? error.message : 'An unexpected error occurred';
        }
        errorEl?.classList.remove('hidden');
      }
    }

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Load resources when page loads
    loadResources();
  </script>
</MainLayout>
