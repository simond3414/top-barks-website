---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle = `Reviews | ${SITE.title}`;

// Fetch reviews at build time (SSG)
let reviews: any[] = [];
let lastUpdated: string | null = null;

try {
  const response = await fetch('http://localhost:4321/api/reviews');
  if (response.ok) {
    const data = await response.json();
    reviews = data.reviews || [];
    lastUpdated = data.lastUpdated;
  }
} catch (e) {
  // If API fails during build, we'll show empty state and let client-side JS load
  reviews = [];
}

// Helper function to render stars
function renderStars(rating: number) {
  return Array(5).fill(0).map((_, i) => (
    `<svg class="h-5 w-5 ${i < rating ? 'text-yellow-400' : 'text-gray-300'}" fill="currentColor" viewBox="0 0 20 20">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
    </svg>`
  )).join('');
}

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-GB', { 
    day: 'numeric', 
    month: 'long', 
    year: 'numeric' 
  });
}
---

<MainLayout title={pageTitle}>
  <!-- Hero Section -->
  <section class="mx-auto max-w-[85rem] px-4 py-14 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-forest-800 dark:text-forest-200 sm:text-5xl">
        Reviews & Testimonials
      </h1>
      <p class="mt-4 text-xl text-earth-700 dark:text-earth-300">
        See what our clients say about working with Top Barks
      </p>
    </div>
  </section>

  <!-- Reviews Grid - Client-side rendered for live updates -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <div class="mb-8 flex flex-col items-center justify-between gap-4 sm:flex-row">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2 rounded-full bg-yellow-50 px-4 py-2 dark:bg-yellow-900/20">
          <svg class="h-6 w-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span class="font-semibold text-forest-800 dark:text-forest-200">5.0 Average</span>
        </div>
        <span class="text-sm text-earth-500" id="lastUpdated">
          {lastUpdated ? `Last updated: ${formatDate(lastUpdated)}` : ''}
        </span>
      </div>
      
      <div class="flex gap-2">
        <a 
          href="https://www.google.com/maps/place/?q=place_id:ChIJicTHUo0xeUgRQTRgWtd797A" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-full bg-forest-600 px-4 py-2 text-sm font-medium text-white transition hover:bg-forest-700"
        >
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
          </svg>
          Review on Google
        </a>
        <a 
          href="https://facebook.com/topbarks" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition hover:bg-blue-700"
        >
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Review on Facebook
        </a>
      </div>
    </div>

    <div id="reviewsContainer" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {reviews.length > 0 ? (
        reviews.slice(0, 20).map((review) => (
          <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
            <div class="flex items-start justify-between">
              {review.rating ? (
                <div class="flex gap-1">
                  {Array(5).fill(0).map((_, i) => (
                    <svg class={`h-5 w-5 ${i < review.rating ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
              ) : review.source === 'facebook' ? (
                <span class="rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                  ✓ Recommended
                </span>
              ) : (
                <div class="flex gap-1">
                  {Array(5).fill(0).map((_, i) => (
                    <svg class="h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
              )}
              <span class={`rounded-full px-3 py-1 text-xs font-semibold ${
                review.source === 'google' 
                  ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' 
                  : 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300'
              }`}>
                {review.source === 'google' ? 'Google' : 'Facebook'}
              </span>
            </div>
            
            <div class="mt-4">
              <p class="review-text text-earth-700 dark:text-earth-300" data-full-text={review.text}>
                {review.text.length > 150 
                  ? `${review.text.substring(0, 150)}...` 
                  : review.text}
              </p>
              {review.text.length > 150 && (
                <button class="read-more-btn mt-2 text-sm font-medium text-forest-600 hover:text-forest-700 dark:text-forest-400">
                  Read more
                </button>
              )}
            </div>
            
            <div class="mt-4 border-t border-beige-200 pt-4 dark:border-earth-700">
              <div class="flex items-center justify-between">
                <div>
                  <p class="font-semibold text-forest-700 dark:text-forest-300">{review.author}</p>
                  <p class="text-sm text-earth-500">{formatDate(review.date)}</p>
                </div>
                {review.url && (
                  <a 
                    href={review.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="rounded-full p-2 text-earth-400 transition hover:bg-beige-100 hover:text-forest-600 dark:hover:bg-earth-800"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      ) : (
        <div class="col-span-full rounded-2xl border border-beige-200 bg-beige-50 p-12 text-center dark:border-earth-700 dark:bg-earth-950">
          <p class="text-earth-600 dark:text-earth-400">Loading reviews...</p>
        </div>
      )}
    </div>

    {reviews.length > 20 && (
      <div class="mt-8 text-center">
        <button id="loadMoreBtn" class="inline-flex items-center gap-2 rounded-full border-2 border-forest-600 px-6 py-3 font-medium text-forest-600 transition hover:bg-forest-50 dark:border-forest-400 dark:text-forest-400 dark:hover:bg-forest-950">
          Load More Reviews
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
      </div>
    )}
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="mx-auto max-w-[85rem] px-4 text-center sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-forest-800 dark:text-forest-200">
        Ready to Join Our Happy Clients?
      </h2>
      <p class="mt-4 text-lg text-earth-700 dark:text-earth-300">
        Contact Mark today to start your dog's training journey
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a href="/contact" class="inline-flex items-center justify-center rounded-full bg-forest-600 px-8 py-3 text-base font-medium text-white transition hover:bg-forest-700 dark:bg-forest-500 dark:hover:bg-forest-600">
          Get in Touch
        </a>
        <a href="/services" class="inline-flex items-center justify-center rounded-full border-2 border-forest-600 px-8 py-3 text-base font-medium text-forest-600 transition hover:bg-forest-50 dark:border-forest-400 dark:text-forest-400 dark:hover:bg-forest-950">
          View Services
        </a>
      </div>
    </div>
  </section>

  <script>
    // Client-side loading for fresh reviews
    let allReviews: any[] = [];
    let displayedCount = 20;

    async function loadReviews() {
      try {
        const response = await fetch('/api/reviews');
        const data = await response.json();
        
        if (data.reviews && data.reviews.length > 0) {
          allReviews = data.reviews;
          renderReviews(allReviews.slice(0, displayedCount));
          
          // Update last updated text
          if (data.lastUpdated) {
            const date = new Date(data.lastUpdated);
            const lastUpdatedEl = document.getElementById('lastUpdated');
            if (lastUpdatedEl) {
              lastUpdatedEl.textContent = `Last updated: ${date.toLocaleDateString('en-GB', { 
                day: 'numeric', 
                month: 'long', 
                year: 'numeric' 
              })}`;
            }
          }
          
          // Show load more button if there are more reviews
          if (allReviews.length > 20) {
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            if (loadMoreBtn) {
              loadMoreBtn.style.display = 'inline-flex';
              loadMoreBtn.addEventListener('click', () => {
                displayedCount += 6;
                renderReviews(allReviews.slice(0, displayedCount));
                if (displayedCount >= allReviews.length) {
                  loadMoreBtn.style.display = 'none';
                }
              });
            }
          }
        } else {
          // Show empty state
          const emptyContainer = document.getElementById('reviewsContainer');
          if (emptyContainer) {
            emptyContainer.innerHTML = `
              <div class="col-span-full rounded-2xl border border-beige-200 bg-beige-50 p-12 text-center dark:border-earth-700 dark:bg-earth-950">
                <p class="text-lg text-earth-600 dark:text-earth-400">No reviews available yet.</p>
                <p class="mt-2 text-sm text-earth-500">Check back soon or visit our Google Business Profile to see reviews.</p>
                <a href="https://g.page/r/ChIJicTHUo0xeUgRQTRgWtd797A/review" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="mt-4 inline-flex items-center gap-2 rounded-full bg-forest-600 px-6 py-2 text-sm font-medium text-white transition hover:bg-forest-700"
                >
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                  </svg>
                  View on Google
                </a>
              </div>
            `;
          }
        }
      } catch (error) {
        console.error('Error loading reviews:', error);
      }
    }

    function renderReviews(reviews: any[]) {
      const container = document.getElementById('reviewsContainer');
      if (!container) return;
      
      container.innerHTML = reviews.map(review => {
        const fullText = review.text || '';
        const isLong = fullText.length > 150;
        const displayText = isLong ? fullText.substring(0, 150) + '...' : fullText;
        
        // Generate rating or recommendation display
        let ratingDisplay = '';
        if (review.rating) {
          ratingDisplay = `<div class="flex gap-1">
            ${Array(5).fill(0).map((_, i) => `
              <svg class="h-5 w-5 ${i < review.rating ? 'text-yellow-400' : 'text-gray-300'}" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            `).join('')}
          </div>`;
        } else if (review.source === 'facebook') {
          ratingDisplay = `<span class="rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
            ✓ Recommended
          </span>`;
        } else {
          ratingDisplay = `<div class="flex gap-1">
            ${Array(5).fill(0).map(() => `
              <svg class="h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            `).join('')}
          </div>`;
        }
        
        return `
          <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
            <div class="flex items-start justify-between">
              ${ratingDisplay}
              <span class="rounded-full px-3 py-1 text-xs font-semibold ${
                review.source === 'google' 
                  ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' 
                  : 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300'
              }">
                ${review.source === 'google' ? 'Google' : 'Facebook'}
              </span>
            </div>
            
            <div class="mt-4">
              <p class="review-text text-earth-700 dark:text-earth-300" data-full-text="${escapeHtml(fullText)}">
                ${escapeHtml(displayText)}
              </p>
              ${isLong ? `
                <button class="read-more-btn mt-2 text-sm font-medium text-forest-600 hover:text-forest-700 dark:text-forest-400" data-review-id="${review.id}">
                  Read more
                </button>
              ` : ''}
            </div>
            
            <div class="mt-4 border-t border-beige-200 pt-4 dark:border-earth-700">
              <div class="flex items-center justify-between">
                <div>
                  <p class="font-semibold text-forest-700 dark:text-forest-300">${escapeHtml(review.author)}</p>
                  <p class="text-sm text-earth-500">${formatDate(review.date)}</p>
                </div>
                ${review.url ? `
                  <a href="${escapeHtml(review.url)}" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="rounded-full p-2 text-earth-400 transition hover:bg-beige-100 hover:text-forest-600 dark:hover:bg-earth-800"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
                ` : ''}
              </div>
            </div>
          </div>
        `;
      }).join('');
      
      // Attach event listeners to read more buttons
      attachReadMoreListeners();
    }
    
    function attachReadMoreListeners() {
      const buttons = document.querySelectorAll('.read-more-btn');
      buttons.forEach(btn => {
        btn.addEventListener('click', function(this: HTMLButtonElement) {
          toggleReadMore(this);
        });
      });
    }

    function toggleReadMore(btn: HTMLButtonElement) {
      const reviewText = btn.previousElementSibling as HTMLElement;
      const fullText = reviewText.getAttribute('data-full-text');
      const isExpanded = btn.textContent === 'Read less';
      
      if (isExpanded) {
        reviewText.textContent = fullText!.substring(0, 150) + '...';
        btn.textContent = 'Read more';
      } else {
        reviewText.textContent = fullText!;
        btn.textContent = 'Read less';
      }
    }

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function formatDate(dateString: string): string {
      const date = new Date(dateString);
      return date.toLocaleDateString('en-GB', { 
        day: 'numeric', 
        month: 'long', 
        year: 'numeric' 
      });
    }

    // Load reviews on page load
    document.addEventListener('DOMContentLoaded', () => {
      // Attach listeners to any server-side rendered reviews first
      attachReadMoreListeners();
      // Then load fresh reviews from API
      loadReviews();
    });
  </script>
</MainLayout>
