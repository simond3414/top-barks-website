---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/front_pic.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import apdtLogo from "@images/APDT.png";
import abtcLogo from "@images/ABTC.jpg";
---

<MainLayout>
  <!-- Hero Section - TODO: Replace with shadcn/ui Card component -->
  <HeroSection
    title=`<img src="/images/logos/2026_Logo_V3_with_2006.png?v=4" alt="Top Barks Dog Training" class="mx-auto h-auto w-full max-w-md object-contain md:max-w-lg lg:max-w-xl" />`
    primaryBtn="Our Services"
    primaryBtnURL="/services"
    secondaryBtn="Contact Mark"
    secondaryBtnURL="/contact"
    withReview={false}
    src={heroImage}
    alt="Mark Sanderson at Top Barks Dog Training with dogs"
  />

  <!-- Features/Why Choose Section - TODO: Replace with shadcn/ui Card component -->
  <FeaturesGeneral
    title="Why Choose Top Barks?"
    subTitle="I am an experienced and highly qualified York based dog trainer who specialises in helping people to train their dogs and tackle a range of behaviour problems. Established in 2006 with the aim of bringing people and their dogs together."
    features={features}
  />

  <!-- Services Overview - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-forest-800 dark:text-forest-200 md:text-4xl">Our Services</h2>
      <p class="mt-4 text-lg text-earth-700 dark:text-earth-300">Expert training tailored to you and your dog</p>
    </div>
    <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Service Cards - TODO: Replace with shadcn/ui Card component -->
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Dog Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">General obedience and focus training for everyday use. One-to-one sessions in your home.</p>
        <a href="/services/dog-training" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Puppy Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">One-to-one puppy programmes with advantages over traditional group classes.</p>
        <a href="/services/puppy-training" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Gundog Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Train your pet to be a gundog. Specialising in working tests, trials, and shooting preparation.</p>
        <a href="/services/gundog-training" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Training Walks</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Your pup's personal trainer. Professional training walks for puppies under 6 months.</p>
        <a href="/services/training-walks" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Behaviour Problems</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Consultations for barking, aggression, inappropriate toileting, and other behavioural issues.</p>
        <a href="/services/behaviour-problems" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
      <div class="group rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition hover:shadow-md dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Show Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">One-to-one ringcraft training. Crufts experience with group and best in show wins.</p>
        <a href="/services/show-training" class="mt-4 inline-flex items-center text-forest-600 hover:text-forest-700 dark:text-forest-400">Learn more →</a>
      </div>
    </div>
  </section>

  <!-- Accreditations Section - TODO: Replace with shadcn/ui Card component -->
  <section class="bg-beige-50 py-10 dark:bg-earth-950">
    <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-2xl font-bold text-forest-800 dark:text-forest-200">Professional Accreditations</h2>
      <div class="mt-8 flex flex-wrap items-center justify-center gap-8">
        <div class="flex flex-col items-center">
          <img src={apdtLogo.src} alt="APDT - Association of Pet Dog Trainers" class="h-24 w-auto object-contain" />
          <p class="mt-2 text-sm text-earth-600">Full Accredited Member</p>
          <p class="text-xs text-earth-500">MAPDT 09777</p>
        </div>
        <div class="flex flex-col items-center">
          <img src={abtcLogo.src} alt="ABTC - Animal Behaviour and Training Council" class="h-24 w-auto object-contain" />
          <p class="mt-2 text-sm text-earth-600">Registered Trainer</p>
        </div>
      </div>
      <p class="mt-6 text-center text-sm text-earth-600">
        Mark Sanderson was the first man in the UK to gain a BSc Hons in Canine Behaviour and Training from the University of Hull
      </p>
    </div>
  </section>

  <!-- Testimonials Section - TODO: Replace with shadcn/ui Card component -->
  <TestimonialsSection
    title="What Our Clients Say"
    subTitle="Join hundreds of satisfied dog owners who have transformed their relationship with their pets"
    ;
    testimonials={[
      {
        content:
          "Mark's approach to training was exactly what we needed. His patience and expertise transformed our unruly spaniel into a well-behaved companion. The one-to-one sessions were invaluable.",
        author: "Sarah & Max",
        role: "Cocker Spaniel Owner",
        avatarSrc:
          "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=300&auto=format&fit=crop",
      },
    ]}
    statistics={[
      {
        count: "2006",
        description:
          "Established - over 15 years of experience",
      },
      {
        count: "1st",
        description:
          "First man in UK with BSc Hons Canine Behaviour",
      },
      {
        count: "APDT",
        description:
          "Full accredited member - promoting kind, fair, effective training",
      },
      {
        count: "York",
        description: "Based in Huntington, serving North Yorkshire",
      },
    ]}
  />

  <!-- Google Reviews Widget Placeholder - TODO: Implement Google Reviews widget -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <div class="rounded-2xl bg-forest-50 p-8 text-center dark:bg-forest-950">
      <h2 class="text-2xl font-bold text-forest-800 dark:text-forest-200">Google Reviews</h2>
      <p class="mt-4 text-earth-600 dark:text-earth-400">
        <!-- TODO: Implement Google Reviews widget integration -->
        Google Reviews widget will be integrated here. See our <a href="/reviews" class="text-forest-600 underline">Reviews page</a> for more details.
      </p>
    </div>
  </section>

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <!-- CTA Section - TODO: Replace with shadcn/ui Card component -->
  <HeroSectionAlt
    title="Ready to Transform Your Dog's Behaviour?"
    subTitle="Contact Mark today to discuss your training needs. Whether it's basic obedience, puppy training, or behavioural issues, we're here to help you and your dog succeed together."
    url="/contact"
  />
</MainLayout>
