---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/front_pic.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import apdtLogo from "@images/APDT.png";
import abtcLogo from "@images/ABTC.jpg";
import awardBusiness from "@images/award_business_2025.png";
import ukDogCharter from "@images/UKDOG_CharterMember_Colour.jpg";
---

<MainLayout>
  <!-- Hero Section - TODO: Replace with shadcn/ui Card component -->
  <HeroSection
    title=`<img src="/images/logos/2026_Logo_V3_with_2006.png?v=4" alt="Top Barks Dog Training" class="mx-auto h-auto w-full max-w-md object-contain md:max-w-lg lg:max-w-xl" />`
    withReview={false}
    src={heroImage}
    alt="Mark Sanderson at Top Barks Dog Training with dogs"
  >
    <!-- Quick Links Section - 5 Main Navigation Buttons (now in left column below logo) -->
    <div slot="custom-buttons" class="mt-8 flex flex-wrap gap-3">
      <a href="/services" class="inline-flex items-center justify-center gap-x-2 rounded-lg bg-forest-600 px-4 py-3 text-sm font-semibold text-white transition hover:bg-forest-700 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-forest-500 dark:bg-forest-600 dark:hover:bg-forest-700">
        Our Services
        <svg class="size-4" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
      </a>
      <a href="/services/puppy-training" class="inline-flex items-center justify-center rounded-lg border border-earth-300 bg-white px-4 py-3 text-sm font-semibold text-earth-700 transition hover:bg-earth-50 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-earth-500 dark:border-earth-600 dark:bg-earth-800 dark:text-earth-200 dark:hover:bg-earth-700">
        Puppy Training
      </a>
      <a href="/about" class="inline-flex items-center justify-center rounded-lg border border-earth-300 bg-white px-4 py-3 text-sm font-semibold text-earth-700 transition hover:bg-earth-50 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-earth-500 dark:border-earth-600 dark:bg-earth-800 dark:text-earth-200 dark:hover:bg-earth-700">
        About Mark
      </a>
      <a href="/reviews" class="inline-flex items-center justify-center rounded-lg border border-earth-300 bg-white px-4 py-3 text-sm font-semibold text-earth-700 transition hover:bg-earth-50 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-earth-500 dark:border-earth-600 dark:bg-earth-800 dark:text-earth-200 dark:hover:bg-earth-700">
        Reviews
      </a>
      <a href="/contact" class="inline-flex items-center justify-center gap-x-2 rounded-lg bg-forest-600 px-4 py-3 text-sm font-semibold text-white transition hover:bg-forest-700 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-forest-500 dark:bg-forest-600 dark:hover:bg-forest-700">
        Contact
        <svg class="size-4" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    </div>
    
    <!-- Experience & Credibility Text -->
    <p slot="custom-buttons" class="mt-6 text-center text-sm text-earth-600 dark:text-earth-400 max-w-md mx-auto">
      Over 20 years of professional experience bringing dogs and their owners together. Since 2006, Mark Sanderson has helped thousands of dogs and their families in York and North Yorkshire.
    </p>
  </HeroSection>

  <!-- Accreditations Section - Moved up to fill gap and provide immediate credibility -->
  <section class="bg-beige-50 py-8 dark:bg-earth-950">
    <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-2xl font-bold text-forest-800 dark:text-forest-200 mb-6">Professional Accreditations</h2>
      <div class="flex flex-wrap items-center justify-center gap-8">
        <div class="flex flex-col items-center">
          <img src={apdtLogo.src} alt="APDT - Association of Pet Dog Trainers" class="h-20 w-auto object-contain" />
          <p class="mt-2 text-sm text-earth-600">Full Accredited Member</p>
          <p class="text-xs text-earth-500">MAPDT 09777</p>
        </div>
        <div class="flex flex-col items-center">
          <img src={abtcLogo.src} alt="ABTC - Animal Behaviour and Training Council" class="h-20 w-auto object-contain" />
          <p class="mt-2 text-sm text-earth-600">Registered Trainer</p>
        </div>
        <div class="flex flex-col items-center">
          <img src={ukDogCharter.src} alt="UK Dog Behaviour and Training Charter - Charter Member" class="h-20 w-auto object-contain" />
          <p class="mt-2 text-sm text-earth-600">Charter Member</p>
        </div>
      </div>
      <p class="mt-4 text-center text-sm text-earth-600">
        Mark Sanderson was the first man in the UK to gain a BSc Hons in Canine Behaviour and Training from the University of Hull
      </p>
    </div>
  </section>

  <!-- Features/Why Choose Section - TODO: Replace with shadcn/ui Card component -->
  <FeaturesGeneral
    title="Why Choose Top Barks?"
    subTitle="I am an experienced and highly qualified York based dog trainer who specialises in helping people to train their dogs and tackle a range of behaviour problems. Established in 2006 with the aim of bringing people and their dogs together."
    features={features}
  />

  <!-- Awards & Recognition Section - TODO: Replace with shadcn/ui Card component -->
  <section class="bg-yellow-50 py-10 dark:bg-earth-900">
    <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-2xl font-bold text-forest-800 dark:text-forest-200">Awards & Recognition</h2>
      <p class="mt-2 text-center text-earth-600 dark:text-earth-400">Quality Business Awards 2025 - York</p>
      <div class="mt-8 flex items-center justify-center">
        <img src={awardBusiness.src} alt="Quality Business Awards 2025 - Best Rated Dog Trainer in York" class="h-auto w-full max-w-4xl object-contain" />
      </div>
    </div>
  </section>

  <!-- Services Overview - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-forest-800 dark:text-forest-200 md:text-4xl">Our Services</h2>
      <p class="mt-4 text-lg text-earth-700 dark:text-earth-300">Expert training tailored to you and your dog</p>
    </div>
    <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Service Cards - TODO: Replace with shadcn/ui Card component -->
      <a href="/services/dog-training" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Dog Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">General obedience and focus training for everyday use. One-to-one sessions in your home.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/puppy-training" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Puppy Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">One-to-one puppy programmes with advantages over traditional group classes.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/gundog-training" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Gundog Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Train your pet to be a gundog. Specialising in working tests, trials, and shooting preparation.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/training-walks" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Training Walks</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Your pup's personal trainer. Professional training walks for puppies under 6 months.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/behaviour-problems" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Behaviour Problems</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Consultations for barking, aggression, inappropriate toileting, and other behavioural issues.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/show-training" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Show Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">One-to-one ringcraft training. Crufts experience with group and best in show wins.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/adolescent-training" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Adolescent Training</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Specialist support for dogs aged 8-24 months. Navigate the challenging teenage phase with practical solutions.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
      <a href="/services/puppy-pre-planning" class="group block cursor-pointer rounded-2xl border border-beige-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:border-forest-300 hover:shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <h3 class="text-xl font-semibold text-forest-700 dark:text-forest-300">Puppy Pre-Planning</h3>
        <p class="mt-3 text-earth-600 dark:text-earth-400">Get expert guidance before bringing your puppy home. Breed selection, home preparation, and setting up for success.</p>
        <span class="mt-4 inline-flex items-center text-forest-600 group-hover:text-forest-700 dark:text-forest-400">Learn more →</span>
      </a>
    </div>
  </section>

  <!-- Testimonials Section - TODO: Replace with shadcn/ui Card component -->
  <TestimonialsSection
    title="What Our Clients Say"
    subTitle="Join hundreds of satisfied dog owners who have transformed their relationship with their pets"
    ;
    testimonials={[
      {
        content:
          "Mark's approach to training was exactly what we needed. His patience and expertise transformed our unruly spaniel into a well-behaved companion. The one-to-one sessions were invaluable.",
        author: "Sarah & Max",
        role: "Cocker Spaniel Owner",
        avatarSrc:
          "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=300&auto=format&fit=crop",
      },
    ]}
    statistics={[
      {
        count: "2006",
        description:
          "Established - over 20 years of experience",
      },
      {
        count: "1st",
        description:
          "First man in UK with BSc Hons Canine Behaviour",
      },
      {
        count: "APDT",
        description:
          "Full accredited member - promoting kind, fair, effective training",
      },
      {
        count: "York",
        description: "Based in Huntington, serving North Yorkshire",
      },
    ]}
  />

  <!-- Google Reviews Widget Placeholder - TODO: Implement Google Reviews widget -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <div class="rounded-2xl bg-forest-50 p-8 text-center dark:bg-forest-950">
      <h2 class="text-2xl font-bold text-forest-800 dark:text-forest-200">Google Reviews</h2>
      <p class="mt-4 text-earth-600 dark:text-earth-400">
        <!-- TODO: Implement Google Reviews widget integration -->
        Google Reviews widget will be integrated here. See our <a href="/reviews" class="text-forest-600 underline">Reviews page</a> for more details.
      </p>
    </div>
  </section>

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <!-- CTA Section - TODO: Replace with shadcn/ui Card component -->
  <HeroSectionAlt
    title="Ready to Transform Your Dog's Behaviour?"
    subTitle="Contact Mark today to discuss your training needs. Whether it's basic obedience, puppy training, or behavioural issues, we're here to help you and your dog succeed together."
    url="/contact"
  />
</MainLayout>
