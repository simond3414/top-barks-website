---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import showTrainingImg1 from "@images/show_training_1.jpg";
import showTrainingImg2 from "@images/show_training_2.JPG";
import showTrainingImg3 from "@images/show_training_3.jpg";
import clumberImg from "@images/breeds/clumber_breed.jpeg";
import fieldImg from "@images/breeds/field_breed.jpg";
import spinoneImg from "@images/breeds/spinone_breed.jpg";
import cockerImg from "@images/breeds/cocker_breed.jpeg";
import braccoImg from "@images/breeds/bracco_breed.jpg";
import { SITE } from "@data/constants";

const pageTitle = `Show Training York | Ringcraft & Crufts Experience | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <!-- Hero Section - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-14 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-forest-800 dark:text-forest-200 sm:text-5xl">
        Show Training
      </h1>
      <p class="mt-4 text-xl text-earth-700 dark:text-earth-300">
        One-to-one ringcraft training from an experienced show handler
      </p>
    </div>
  </section>

  <!-- Content Section - TODO: Replace with shadcn/ui Card component -->
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <div class="grid items-start gap-12 lg:grid-cols-2">
      <div>
        <h2 class="text-2xl font-bold text-forest-800 dark:text-forest-200">Expert Ringcraft Training</h2>
        <p class="mt-4 text-lg text-earth-700 dark:text-earth-300">
          I offer ringcraft training on a one-to-one basis at your home or a venue of your choice. If you are looking to get started on the road to showing your dog to a high standard, and don't know where to start, these sessions are for you.
        </p>

        <div class="mt-8 rounded-xl border-l-4 border-forest-500 bg-forest-50 p-6 dark:bg-forest-950">
          <h3 class="text-lg font-semibold text-forest-800 dark:text-forest-200">Mark's Show Experience</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            I have a wealth of experience and show currently in the UK and Europe. I have appeared a number of times at Crufts with group and best in show wins to our credit at open and championship show level.
          </p>
        </div>

        <div class="mt-8 rounded-xl border border-beige-200 bg-white p-6 dark:border-earth-700 dark:bg-earth-900">
          <h3 class="text-lg font-semibold text-forest-700 dark:text-forest-300">Proudest Achievements</h3>
          <div class="mt-4 space-y-3">
            <div class="flex items-start gap-3">
              <svg class="mt-1 h-6 w-6 flex-shrink-0 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <p class="text-earth-700 dark:text-earth-300">
                <strong>Best Puppy in Show</strong> at the Scottish Kennel Club Show in August 2017
              </p>
            </div>
            <div class="flex items-start gap-3">
              <svg class="mt-1 h-6 w-6 flex-shrink-0 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <p class="text-earth-700 dark:text-earth-300">
                <strong>Best HPR</strong> in the Gamekeeper classes at Crufts 2024
              </p>
            </div>
            <div class="flex items-start gap-3">
              <svg class="mt-1 h-6 w-6 flex-shrink-0 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <p class="text-earth-700 dark:text-earth-300">
                <strong>Top UK Bracco Italiano</strong> 2022
              </p>
            </div>
            <div class="flex items-start gap-3">
              <svg class="mt-1 h-6 w-6 flex-shrink-0 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <p class="text-earth-700 dark:text-earth-300">
                <strong>Top UK Bracco Italiano</strong> 2025
              </p>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <h3 class="text-xl font-semibold text-forest-800 dark:text-forest-200">Specialisations</h3>
          <p class="mt-4 text-earth-700 dark:text-earth-300">
            Clumber spaniels, field spaniels, Italian spinone, cocker spaniels and bracchi italiani.
          </p>
          
          <div class="mt-6 flex flex-wrap gap-3">
            <button type="button" class="rounded-full bg-forest-100 px-4 py-2 text-sm font-medium text-forest-700 transition hover:bg-forest-200 dark:bg-forest-900 dark:text-forest-300 dark:hover:bg-forest-800" data-hs-overlay="#hs-modal-clumber">Clumber Spaniels</button>
            <button type="button" class="rounded-full bg-forest-100 px-4 py-2 text-sm font-medium text-forest-700 transition hover:bg-forest-200 dark:bg-forest-900 dark:text-forest-300 dark:hover:bg-forest-800" data-hs-overlay="#hs-modal-field">Field Spaniels</button>
            <button type="button" class="rounded-full bg-forest-100 px-4 py-2 text-sm font-medium text-forest-700 transition hover:bg-forest-200 dark:bg-forest-900 dark:text-forest-300 dark:hover:bg-forest-800" data-hs-overlay="#hs-modal-spinone">Italian Spinone</button>
            <button type="button" class="rounded-full bg-forest-100 px-4 py-2 text-sm font-medium text-forest-700 transition hover:bg-forest-200 dark:bg-forest-900 dark:text-forest-300 dark:hover:bg-forest-800" data-hs-overlay="#hs-modal-cocker">Cocker Spaniels</button>
            <button type="button" class="rounded-full bg-forest-100 px-4 py-2 text-sm font-medium text-forest-700 transition hover:bg-forest-200 dark:bg-forest-900 dark:text-forest-300 dark:hover:bg-forest-800" data-hs-overlay="#hs-modal-bracco">Bracchi Italiani</button>
          </div>
        </div>

        <div class="mt-8">
          <h3 class="text-xl font-semibold text-forest-800 dark:text-forest-200">What You'll Learn</h3>
          <ul class="mt-4 space-y-3">
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-earth-700 dark:text-earth-300">Ring presentation and handling techniques</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-earth-700 dark:text-earth-300">Gaiting and movement in the ring</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-earth-700 dark:text-earth-300">Stacking and posing your dog</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-earth-700 dark:text-earth-300">Show etiquette and ring craft</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-earth-700 dark:text-earth-300">Building confidence for you and your dog</span>
            </li>
          </ul>
        </div>

        <div class="mt-8 rounded-2xl bg-beige-50 p-6 dark:bg-earth-950">
          <h3 class="text-lg font-semibold text-forest-800 dark:text-forest-200">Pricing</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            I offer both single lessons, blocks of 4 1-hour lessons and tailor made packages for locations within the York radius. Other areas are covered. Please <a href="/contact" class="text-forest-600 underline">contact us</a> for more details.
          </p>
        </div>

        <div class="mt-8">
          <a href="/contact" class="inline-flex items-center justify-center rounded-full bg-forest-600 px-8 py-3 text-base font-medium text-white transition hover:bg-forest-700 dark:bg-forest-500 dark:hover:bg-forest-600">
            Book Show Training
          </a>
        </div>

        <!-- WhatsApp Quick Contact -->
        <div class="mt-6 flex flex-col items-start gap-3 sm:flex-row sm:items-center">
          <span class="text-sm text-earth-600 dark:text-earth-400">Questions? Message Mark directly:</span>
          <a href="https://wa.me/447932632855?text=Hi%20Mark%2C%20I'm%20interested%20in%20show%20training%20for%20my%20dog" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-x-2 rounded-lg bg-forest-600 px-3 py-2 text-sm font-semibold text-white transition hover:bg-forest-700 dark:bg-forest-600 dark:hover:bg-forest-700">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.521.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.521-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.521.074-.792.372-.27.298-1.033 1.011-1.033 2.466 0 1.456 1.06 2.861 1.207 3.058.149.198 2.086 3.183 5.055 4.466.705.304 1.256.487 1.685.623.708.226 1.352.194 1.862.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.27-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp
          </a>
        </div>
      </div>

      <div class="space-y-6 lg:sticky lg:top-8">
        <Image src={showTrainingImg1} alt="Mark at a dog show" class="rounded-2xl object-cover shadow-lg" />
        <Image src={showTrainingImg2} alt="Dog show awards" class="rounded-2xl object-cover shadow-lg" />
        <Image src={showTrainingImg3} alt="Mark at Crufts" class="rounded-2xl object-cover shadow-lg" />
      </div>
    </div>
  </section>

  <!-- Breed Information Modals -->
  <!-- Clumber Spaniel Modal -->
  <div id="hs-modal-clumber" class="hs-overlay fixed start-0 top-0 z-[80] hidden h-full w-full overflow-y-auto overflow-x-hidden [--body-scroll:true]">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg">
      <div class="relative flex flex-col rounded-xl border border-beige-200 bg-white shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <div class="absolute end-2 top-2">
          <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full border border-transparent text-earth-500 transition hover:bg-earth-100 hover:text-earth-700 focus:outline-none focus:ring-2 focus:ring-earth-500 dark:text-earth-400 dark:hover:bg-earth-800 dark:hover:text-earth-200" data-hs-overlay="#hs-modal-clumber">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </div>
        <div class="p-6">
          <img src={clumberImg.src} alt="Clumber Spaniel" class="mb-4 h-64 w-full rounded-lg object-contain" />
          <h3 class="text-xl font-bold text-forest-800 dark:text-forest-200">Clumber Spaniel</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            The largest of all flushing spaniels. Dignified, gentle, and heavy-set with a white coat featuring lemon or orange markings. Known for their calm demeanor and steady work in the field.
          </p>
          <a href="https://www.thekennelclub.org.uk/search/breeds-a-to-z/breeds/gundog/spaniel-clumber/" target="_blank" class="mt-4 inline-flex items-center text-forest-600 hover:underline dark:text-forest-400">
            Learn more at The Kennel Club
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Field Spaniel Modal -->
  <div id="hs-modal-field" class="hs-overlay fixed start-0 top-0 z-[80] hidden h-full w-full overflow-y-auto overflow-x-hidden [--body-scroll:true]">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg">
      <div class="relative flex flex-col rounded-xl border border-beige-200 bg-white shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <div class="absolute end-2 top-2">
          <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full border border-transparent text-earth-500 transition hover:bg-earth-100 hover:text-earth-700 focus:outline-none focus:ring-2 focus:ring-earth-500 dark:text-earth-400 dark:hover:bg-earth-800 dark:hover:text-earth-200" data-hs-overlay="#hs-modal-field">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </div>
        <div class="p-6">
          <img src={fieldImg.src} alt="Field Spaniel" class="mb-4 h-64 w-full rounded-lg object-contain" />
          <h3 class="text-xl font-bold text-forest-800 dark:text-forest-200">Field Spaniel</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            A rare, sweet-natured breed similar to the Cocker but larger. Traditionally used for flushing and retrieving game, they have glossy coats and a docile temperament.
          </p>
          <a href="https://www.thekennelclub.org.uk/search/breeds-a-to-z/breeds/gundog/spaniel-field/" target="_blank" class="mt-4 inline-flex items-center text-forest-600 hover:underline dark:text-forest-400">
            Learn more at The Kennel Club
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Italian Spinone Modal -->
  <div id="hs-modal-spinone" class="hs-overlay fixed start-0 top-0 z-[80] hidden h-full w-full overflow-y-auto overflow-x-hidden [--body-scroll:true]">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg">
      <div class="relative flex flex-col rounded-xl border border-beige-200 bg-white shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <div class="absolute end-2 top-2">
          <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full border border-transparent text-earth-500 transition hover:bg-earth-100 hover:text-earth-700 focus:outline-none focus:ring-2 focus:ring-earth-500 dark:text-earth-400 dark:hover:bg-earth-800 dark:hover:text-earth-200" data-hs-overlay="#hs-modal-spinone">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </div>
        <div class="p-6">
          <img src={spinoneImg.src} alt="Italian Spinone" class="mb-4 h-64 w-full rounded-lg object-contain" />
          <h3 class="text-xl font-bold text-forest-800 dark:text-forest-200">Italian Spinone</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            An ancient Italian gundog with great stamina. Strong, all-purpose hunter with a distinctive coarse coat and methodical hunting style. Hugely popular in Italy.
          </p>
          <a href="https://www.thekennelclub.org.uk/search/breeds-a-to-z/breeds/gundog/italian-spinone/" target="_blank" class="mt-4 inline-flex items-center text-forest-600 hover:underline dark:text-forest-400">
            Learn more at The Kennel Club
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Cocker Spaniel Modal -->
  <div id="hs-modal-cocker" class="hs-overlay fixed start-0 top-0 z-[80] hidden h-full w-full overflow-y-auto overflow-x-hidden [--body-scroll:true]">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg">
      <div class="relative flex flex-col rounded-xl border border-beige-200 bg-white shadow-lg dark:border-earth-700 dark:bg-earth-900">
        <div class="absolute end-2 top-2">
          <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full border border-transparent text-earth-500 transition hover:bg-earth-100 hover:text-earth-700 focus:outline-none focus:ring-2 focus:ring-earth-500 dark:text-earth-400 dark:hover:bg-earth-800 dark:hover:text-earth-200" data-hs-overlay="#hs-modal-cocker">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </div>
        <div class="p-6">
          <img src={cockerImg.src} alt="Cocker Spaniel" class="mb-4 h-64 w-full rounded-lg object-contain" />
          <h3 class="text-xl font-bold text-forest-800 dark:text-forest-200">Cocker Spaniel</h3>
          <p class="mt-2 text-earth-700 dark:text-earth-300">
            The "merry cocker" - popular family pet and gundog bred originally to hunt woodcock. Known for happy temperament and ever-wagging tail.
          </p>
          <a href="https://www.thekennelclub.org.uk/search/breeds-a-to-z/breeds/gundog/spaniel-cocker/" target="_blank" class="mt-4 inline-flex items-center text-forest-600 hover:underline dark:text-forest-400">
            Learn more at The Kennel Club
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bracco Italiano Modal -->
  <div id="hs-modal-bracco" class="hs-overlay fixed start-0 top-0 z-[80] hidden h-full w-full overflow-y-auto overflow-x-hidden [--body-scroll:true]">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg">
